{% extends 'base.html.twig' %}

{% block title %}Hello SlugController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    <form method="post" action="{{ path('app_slug') }}">
    <input type="text" name="phrase" placeholder="Entrez une phrase">
    <button type="submit">Slugifier</button>
<br>
    <p style="font-size: 25px;">{{phrase}} 
    {% if slug %}=>{% endif %} 
    <b>{{slug}}</b></p>
</form>
</div>
{% endblock %}
